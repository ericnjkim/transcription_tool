/* Text editors */
QLineEdit,
QPlainTextEdit {
    background-color: #232629;
    color: #eff0f1;
    border-radius: 2px;
    border: 1px transparent #76797C; /* modified from solid to transparent */
}
QLineEdit:focus,
QLineEdit:focus {
    border: 1px solid #3daee9;
}

